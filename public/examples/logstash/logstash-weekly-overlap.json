{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "desrciption": "Show logstash data as weekly overlapping lines, thickest/brightest being the most recent. Make sure your timefilter range has data.",
  "signals": [
    {"name": "divider", "update": "(1000*60*60*24*7)"},
    {
      "name": "interpolate",
      "value": "natural",
      "bind": {
        "input": "select",
        "options": [
          "linear",
          "linear-closed",
          "step",
          "step-before",
          "step-after",
          "basis",
          "basis-open",
          "basis-closed",
          "cardinal",
          "cardinal-open",
          "cardinal-closed",
          "bundle",
          "monotone"
        ]
      }
    }
  ],
  "data": [
    {
      "name": "table",
      "url": {
        "index": "logstash-*",
        "body": {
          "query": {
            "range": {"@timestamp": {"%timefilter%": true}}
          },
          "size": 0,
          "aggs": {
            "hist": {
              "date_histogram": {
                "field": "@timestamp",
                "interval": "2h",
                "time_zone": "America/New_York",
                "min_doc_count": 1
              }
            }
          }
        }
      },
      "format": {
        "type": "json",
        "property": "aggregations.hist.buckets"
      },
      "transform": [
        {
          "type": "formula",
          "as": "weekadjusted",
          "expr": "datum.key"
        },
        {
          "type": "formula",
          "as": "week",
          "expr": "floor(datum.weekadjusted/divider)"
        },
        {
          "type": "formula",
          "as": "weekday",
          "expr": "datum.weekadjusted%divider"
        },
        {
          "type": "collect",
          "sort": {"field": ["week", "weekday"]}
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "domain": {"data": "table", "field": "weekday"},
      "range": "width"
    },
    {
      "name": "yscale",
      "domain": {"data": "table", "field": "doc_count"},
      "nice": true,
      "range": "height"
    },
    {
      "name": "color",
      "type": "quantile",
      "range": {"scheme": "yellowgreenblue"},
      "domain": {"data": "table", "field": "week"}
    },
    {
      "name": "opac",
      "type": "pow",
      "range": [0.2, 1],
      "domain": {"data": "table", "field": "week"}
    },
    {
      "name": "thickness",
      "type": "log",
      "range": [0.1, 4],
      "domain": {"data": "table", "field": "week"}
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "tickCount": 7,
      "encode": {
        "labels": {
          "update": {
            "text": {"signal": "utcFormat(datum.value, '%A')"}
          }
        }
      }
    },
    {"orient": "left", "scale": "yscale"}
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "week"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "xscale", "field": "weekday"},
              "y": {"scale": "yscale", "field": "doc_count"},
              "stroke": {"scale": "color", "field": "week"},
              "opacity": {"scale": "opac", "field": "week"},
              "strokeWidth": {
                "scale": "thickness",
                "field": "week"
              }
            },
            "update": {
              "interpolate": {"signal": "interpolate"},
              "fillOpacity": {"value": 1}
            },
            "hover": {"fillOpacity": {"value": 0.5}}
          }
        }
      ]
    }
  ]
}
